# Copy this file to `.env` and fill in the values below.

# Telegram Bot token provided by @BotFather.
TELEGRAM_BOT_TOKEN=

# Google Gemini API key (for the AI service).
GEMINI_API_KEY=

# Weather API key (e.g. OpenWeatherMap).  Optional.
WEATHER_API_KEY=

# Translation API key.  Optional (depends on provider).
TRANSLATION_API_KEY=

# Dictionary API key.  Optional (depends on provider).
DICTIONARY_API_KEY=

# Database URL for SQLAlchemy.  Default uses SQLite in the project folder.
DATABASE_URL=sqlite+aiosqlite:///./bot.db

# Path to the log file.
LOG_FILE=bot.log